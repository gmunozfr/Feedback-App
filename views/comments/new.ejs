<!-- /*  this is the form where we can add a feedback to a comment*/ -->
<% include ../partials/header %>

<div class="container">
	<div class="row">			
		<h1 style="text-align: center;">Please Add a Feedback to <%= feedback.name %></h1>
	<div style="width: 30%; margin: 25px auto;">
<!-- adding the comment regarding the feedback id	-->
      <form action="/feedbacks/<%= feedback._id%>/comments" method="POST">
		 <div clas="form-group">
<!-- adding [] because we're dealing with objects while using embed java script	 -->
		  <input class="form-control" type="text" name="comment[text]" placeholder="text">
		 </div>
		  <div clas="form-group">	
<!-- styling the submit button while using bootstrap	-->
		    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
		 </div>
	  </form>	
		<!-- styling the "Go back" button while using bootstrap	-->
		<a href="/feedbacks" class="btn btn-success btn-sm">Go Back</a>
	</div>	
	</div>
</div>

<% include ../partials/footer %>

